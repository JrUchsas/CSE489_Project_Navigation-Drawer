<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/idInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter last 2 digits of ID"
        android:inputType="number"
        android:maxLength="2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/actualBatteryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual Battery: --%"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/calculatedBatteryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculated Battery (for notification): --%"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:visibility="visible" />

</LinearLayout>